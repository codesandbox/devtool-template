{
  "name": "devtool-template",
  "version": "1.0.0",
  "description": "A devtool for CodeSandbox",
  "main": "index.js",
  "bin": "bin/devtool",
  "scripts": {
    "dev": "yarn build && concurrently -n client,server,devtool -c red,green,yellow \"yarn watch:client\" \"yarn watch:server\" \"nodemon dist/server\"",
    "build": "yarn build:client && yarn build:server",
    "build:client": "esbuild client/index.ts --bundle --outfile=dist/client.js",
    "build:server": "esbuild server/index.ts --bundle --platform=node --outfile=dist/server.js",
    "watch:client": "esbuild client/index.ts --bundle --outfile=dist/client.js --watch",
    "watch:server": "esbuild server/index.ts --bundle --platform=node --outfile=dist/server.js --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codesandbox/devtool-template.git"
  },
  "author": "CodeSandbox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codesandbox/devtool-template/issues"
  },
  "homepage": "https://github.com/codesandbox/devtool-template#readme",
  "devDependencies": {
    "concurrently": "^7.3.0",
    "esbuild": "^0.15.7",
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "express": "^4.18.1"
  }
}
